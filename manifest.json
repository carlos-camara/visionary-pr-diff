{
    "manifest_version": 3,
    "name": "Visionary PR Diff",
    "version": "1.0.0",
    "description": "Advanced pixel-level regression analysis.",
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://github.com/*",
        "https://*.githubusercontent.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*",
                "https://*.githubusercontent.com/*",
                "https://viewscreen.githubusercontent.com/*"
            ],
            "js": [
                "diff-engine.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "all_frames": true,
            "match_about_blank": true,
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}